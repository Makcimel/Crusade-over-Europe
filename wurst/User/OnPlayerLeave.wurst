package OnPlayerLeave
import Main

function action()
	WarningToForce(GetTriggerPlayer().getNameColored() + " has left the game!", GetPlayersAll())
	
	player_stats[GetPlayerId(GetTriggerPlayer())].SetInGame(false)

	SetPlayerUnitsOwner(GetTriggerPlayer(), PLAYER_NEUTRAL_AGGRESSIVE)

init
	let t = CreateTrigger()
		..addAction(function action)
	for i = 0 to PLAYER_SLOTS - 1
		t.registerPlayerEvent(players[i], EVENT_PLAYER_LEAVE)